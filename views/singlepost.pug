extends layout

block content
  body(class='main')
    nav
      ul
        li 
          a(href='/')
            img(src='images/logo.png' id='centered-logo')
    h1 $#{post.price}/MO | #{post.title}
    p Posted: #{postedDate}
      
    div(class='description')
      p 
        em Description: 
        | #{post.description}
      
    div(id='map')
    
    //- Needs to be in order of button -> div for the hideshow(e) to work
    button(onClick='hideShow(event)' class='contact-button') Contact The poster
    div(class='hideshow')
      p Contact: #{post.fullName}
      p #{post.email}
      if post.phone
        p #{post.phone}
        
    //- Needs to be in order of button -> div for the hideshow(e) to work
    button(onclick='hideShow(event)' class='contact-button') Show address
    div(class='hideshow')
      p #{post.addressLine1}
      p #{post.addressLine2}
      p #{post.city + ', ' + post.stateProvinceRegion + ' ' + post.zipOrPostal}
      
    script.
          var map = new ol.Map({
          target: 'map',
          layers: [
          new ol.layer.Tile({
          source: new ol.source.OSM()
          })
          ],
          view: new ol.View({
          center: ol.proj.fromLonLat(#{post.lonLat}),
          zoom: 13
          })
          });
        
